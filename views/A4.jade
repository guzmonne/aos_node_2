		link(rel='stylesheet', href='/css/bootstrap.min.css')
		link(rel='stylesheet', href='/css/font-awesome/css/font-awesome.css')
		link(rel='stylesheet', href='/css/print.css')

	body
		header
			h1.title Orden de Servicio
			.row
				.col-xs-6
					address
						ul.list-unstyled
