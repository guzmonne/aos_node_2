<form class="form-horizontal">
	{{! FORMULARIO PARA NUEVO EQUIPO }}
	{{#unless client_id}}
		{{! DATOS DEL CLIENTE }}
		<div class="row">
			<div class="col-lg-12">
				<h5>Datos del Cliente</h5>
			</div>
		</div>
		<div class="row">
			<div class="col-md-5">
				<div class="form-group">
					<label for="client_name" class="col-sm-4 control-label">Cliente</label>
					<div class="col-sm-8">
						<input type="text" class="form-control" name="client_name" placeholder="e.j: Juan Perez" value="{{client_name}}">
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="form-group">
					<label for="client_id" class="col-sm-6 control-label">ID de Cliente</label>
					<div class="col-sm-6">
						<input type="text" class="form-control" name="client_id" placeholder="e.j: nn1234" value="{{client_id}}">
					</div>
				</div>
			</div>
			<div class="col-md-3">
				<div class="form-group">
					<div class="col-sm-12">
						<button class="btn btn-info pull-left" tabindex="-1">
							<i class="fa fa-search"></i> Buscar Cliente
						</button>
					</div>
				</div>
			</div>
		</div>
		{{! // }}
		<div class="row">
			<div class="col-lg-12">
				<hr style="margin: 0;">
			</div>
		</div>
	{{/unless}}
	{{! DATOS DEL EQUIPO }}
	<div class="row">
		<div class="col-lg-12">
			<h5>Datos del Equipo</h5>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				<label for="brand" class="col-sm-3 control-label">Marca</label>
				<div class="col-sm-9">
					<input type="text" class="form-control" name="brand" placeholder="e.j: Punktal" value="{{brand}}">
				</div>
			</div>
			<div class="form-group">
				<label for="model" class="col-sm-3 control-label">Modelo</label>
				<div class="col-sm-9">
					<input type="text" class="form-control" name="model" placeholder="e.j: PKT1020" value="{{model}}">
				</div>
			</div>
			<div class="form-group">
				<label for="serial" class="col-sm-3 control-label">Serie</label>
				<div class="col-sm-9">
					<input type="text" class="form-control" name="serial" placeholder="e.j: AXE102032" value="{{serial}}">
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-group">
				<label for="category" class="col-sm-4 control-label">Categoría</label>
				<div class="col-sm-8">
					<input type="text" class="form-control" name="category" placeholder="e.j: Electrodomestico" value="{{category}}">
				</div>
			</div>
			<div class="form-group">
				<label for="subcategory" class="col-sm-4 control-label">Subcategoría</label>
				<div class="col-sm-8">
					<input type="text" class="form-control" name="subcategory" placeholder="e.j: Plancha" value="{{subcategory}}">
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-12">
					<button class="btn btn-info pull-left" tabindex="-1">
						<i class="fa fa-search"></i> Buscar Equipo
					</button>
				</div>
			</div>
		</div>
	</div>
	{{! // }}
	<div class="row">
		<div class="col-lg-12">
			<hr style="margin: 0;">
		</div>
	</div>
	{{! DETALLES ADICIONALES }}
	<div class="row">
		<div class="col-lg-12">
			<h5>Detalles Adicionales</h5>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<div class="form-group">
				<label for="accesories" class="col-sm-2 control-label">Accesorios</label>
				<div class="col-sm-10">
					<select class="form-control" name="accesories" data-role="tagsinput" multiple>
						{{#each accesories}}
							<option value="{{this}}">{{this}}</option>
						{{/each}}	
					</select>	
				</div>
			</div>
			<div class="form-group">
				<label for="state" class="col-sm-2 control-label">Estado</label>
				<div class="col-sm-10">
					<textarea class="form-control" name="state">{{state}}</textarea>
				</div>
			</div>
		</div>
	</div>
	{{! // }}
	<div class="row">
		<div class="col-lg-12">
			<hr style="margin: 0;">
		</div>
	</div>
	{{! // }}
</form>