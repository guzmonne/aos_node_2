<div class="col-lg-12">
	<div class="row">
		<div class="col-xs-8">
			<h1>
			  Modelo: {{model}}
			  <span class="pull-right label {{statusClass status}}">{{status}}</span>
			</h1>
			<div class="row">
				<div class="col-xs-2">
					<ul class="list-unstyled">
						<li><strong>Marca</strong></li>
						<li><strong>Categoría</strong></li>
						<li><strong>Subcategoría</strong></li>
					</ul>
				</div>
				<div class="col-xs-4">
					<ul class="list-unstyled">
			  		<li>{{brand}}</li>
			  		<li>{{category}}</li>
			  		<li>{{subcategory}}</li>
					</ul>
				</div>
			</div>
		</div>
		<div class="col-xs-4">
			<h2>Filtros</h2>
			<div class="checkbox">
				<label class="col-sm-12">
					<input type="checkbox" checked data-name="serial"> Serie
				</label>
			</div>
			<div class="checkbox">
				<label class="col-sm-12">
					<input type="checkbox" checked data-name="accessories"> Accessorios
				</label>
			</div>
			<div class="checkbox">
				<label class="col-sm-12">
					<input type="checkbox" checked data-name="observations"> Observaciones
				</label>
			</div>
			<div class="checkbox">
				<label class="col-sm-12">
					<input type="checkbox" checked data-name="defect"> Defecto
				</label>
			</div>
		</div>
	</div>
	<hr>
	<table class="table table-striped table-bordered table-hover table-office" style="width: 100%">
		<thead>
			<tr>
				<th style="width: 5%">#</th>
				<th style="width: 15%">Serie</th>
				<th style="width: 20%">Accesorios</th>
				<th style="width: 30%">Observaciones</th>
				<th style="width: 30%">Defecto</th>
			</tr>
		</thead>
		<tbody></tbody>
	</table>
	<hr style="margin-bottom: 10px">
	<button name="save-details" class="btn btn-primary pull-right">Aceptar</button>
</div>