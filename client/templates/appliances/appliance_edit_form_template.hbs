<div class="col-lg-offset-1 col-lg-9 col-md-12">
	<form class="form-horizontal">
		{{! ================ }}
		{{! DATOS DEL EQUIPO }}
		{{! ================ }}
		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					<label for="brand" class="col-sm-3 control-label">Marca</label>
					<div class="col-sm-9">
						<input readonly type="text" class="form-control" name="brand" placeholder="e.j: Punktal" value="{{brand}}">
					</div>
				</div>
				<div class="form-group">
					<label for="model" class="col-sm-3 control-label">Modelo</label>
					<div class="col-sm-9">
						<input readonly type="text" class="form-control" name="model" placeholder="e.j: PKT1020" value="{{model}}">
					</div>
				</div>
				<div class="form-group">
					<label for="serial" class="col-sm-3 control-label">Serie</label>
					<div class="col-sm-9">
						<input readonly type="text" class="form-control" name="serial" placeholder="e.j: AXE102032" value="{{serial}}">
					</div>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group">
					<label for="category" class="col-sm-4 control-label">Categoría</label>
					<div class="col-sm-8">
						<input readonly type="text" class="form-control" name="category" placeholder="e.j: Electrodomestico" value="{{category}}">
					</div>
				</div>
				<div class="form-group">
					<label for="subcategory" class="col-sm-4 control-label">Subcategoría</label>
					<div class="col-sm-8">
						<input readonly type="text" class="form-control" name="subcategory" placeholder="e.j: Plancha" value="{{subcategory}}">
					</div>
				</div>
			</div>
		</div>

		{{! ======================= }}
		<div class="row">
			<div class="col-lg-12">
				<hr style="margin-top: 0;">
			</div>
		</div>
		{{! ======================= }}

		{{! ==================== }}
		{{! DETALLES ADICIONALES }}
		{{! ==================== }}
		<div class="row">
			<div class="col-lg-12">
				<div class="form-group">
					<label for="accessories" class="col-sm-2 control-label">Accesorios</label>
					<div class="col-sm-10">
						<select disabled class="form-control" name="accessories" data-role="tagsinput" multiple>
							{{#each accessories}}
								<option value="{{this}}">{{this}}</option>
							{{/each}}	
						</select>	
					</div>
				</div>
				<div class="form-group">
					<label for="observations" class="col-sm-2 control-label">Observaciones</label>
					<div class="col-sm-10">
						<textarea readonly class="form-control" name="observations">{{observations}}</textarea>
					</div>
				</div>
			</div>
		</div>

		{{! ======================= }}
		<div class="row">
			<div class="col-lg-12">
				<hr style="margin-top: 0;">
			</div>
		</div>
		{{! ======================= }}

		{{! =================== }}
		{{! DATOS DE REPARACIÓN }}
		{{! =================== }}
		<div class="row">
			<div class="col-lg-12">
				<div class="form-group">
					<label for="repairement_type" class="col-sm-2 control-label">Tipo de Rep.</label>
					<div class="col-sm-10">
						<select disabled class="form-control" name="repairement_type" value={{repairment_type}}>
							<option value="Garantía">Garantía</option>
							<option value="Presupuesto">Presupuesto</option>
						</select>	
					</div>
				</div>
				<div class="form-group">
					<label for="defect" class="col-sm-2 control-label">Defecto</label>
					<div class="col-sm-10">
						<textarea readonly class="form-control" name="defect">{{defect}}</textarea>
					</div>
				</div>
			</div>
		</div>

	</form>
</div>