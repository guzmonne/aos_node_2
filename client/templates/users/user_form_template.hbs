<div class="col-lg-12">
	<form class="form-horizontal">
		{{! ================= }}
		{{! DATOS DEL USUARIO }}
		{{! ================= }}
		<div class="row">
			<div class="col-md-6">
				<div class="form-group">
					<label for="name" class="col-sm-3 control-label">Nombre</label>
					<div class="col-sm-9">
						<input type="text" class="form-control" name="name" placeholder="e.j: Juan Perez" value="{{name}}">
					</div>
				</div>
			</div>
			<div class="col-md-6">
				<div class="form-group">
					<label for="email" class="col-sm-3 control-label">Email</label>
					<div class="col-sm-9">
						<input type="email" class="form-control" name="email" placeholder="e.j: ejemplo@gotmail.com" value="{{email}}">
					</div>
				</div>
			</div>
		</div>
		{{! ======================= }}
		<div class="row">
			<div class="col-lg-12">
				<hr style="margin-top: 10px;">
			</div>
		</div>
		{{! ======================= }}
		<div class="row">
			<div class="col-md-6">
				<div class="checkbox">
					<label for="isAdmin" class="col-sm-12">
						<input type="checkbox" name="isAdmin" {{#is permissions.roles.isAdmin true}} checked {{/is}}> Administrador
					</label>
				</div>
			</div>
			<div class="col-md-6">
				<div class="checkbox">
					<label for="isTech" class="col-sm-12">
						<input type="checkbox" name="isTech" {{#is permissions.roles.isTech true}} checked {{/is}}> Tecnico
					</label>
				</div>
			</div>
		</div>

		{{! ======================= }}
		<div class="row">
			<div class="col-lg-12">
				<hr style="margin-top: 10px;">
			</div>
		</div>
		{{! ======================= }}

		<div class="row" style="border-radius: 0; margin-bottom: 0">
	    <div class="col-xs-12">
	      <button type="submit" id="save-model" class="btn btn-primary">
	      	<i class="fa fa-save"></i>
	      	 Guardar
	      </button>
	      <button type="submit" id="save-changes-model" class="btn btn-warning hide">
	      	<i class="fa fa-save"></i>
	      	 Guardar Cambios
	      </button>
	      <button id="edit-model" class="btn btn-primary">
	      	<i class="fa fa-pencil"></i>
	      	 Editar
	      </button>
	      <button id="reset-model" class="btn btn-inverse hide pull-right">
	      	<i class="fa fa-reply"></i>
	      	 Reestablecer
	      </button>
	    </div>
		</div>
	</form>
</div>