<div class="col-lg-12">
  <h1>
    Cliente: 
     <a href="#render/client/show/{{client_id}}" name="client_name">
      {{client_name}}
    </a>
    <span class="pull-right label {{statusClass status}}" name="status">{{status}}</span>
  </h1>
  <hr style="margin: 0">
  <div class="row">
    <div class="col-sm-6">
        <h3>Equipos</h3>
    </div>
    <div class="col-sm-6">
      <h3 class="pull-right hide" name="invoiceText">
        Remito: 
         <span class="text-primary" name="invoiceNumber">{{invoiceNumber}}</span>
       </h3>
    </div>
  </div>
  <div id="service-request-appliances"></div>
</div>
<div class="col-lg-12">
<hr>
  <div class="row">
    <div class="col-sm-6">
      <small>
        Creado el {{createdAt}} por {{createdBy}}
      </small>
    </div>
    <div class="col-sm-6 text-right">
      <small>
        Modificado el {{updatedAt}} por {{updatedBy}}
      </small>
    </div>
  </div>
</div>