<form class="form-horizontal">
	<div class="row">
		<div class="col-lg-8 col-md-8 col-xs-8">
			<div class="form-group">
				<label for="client_name" class="col-sm-2 control-label">Cliente</label>
				<div class="col-sm-8">
					<input type="text" class="form-control" name="client_name" placeholder="Juan Perez" value="{{client_name}}" {{#if client_name}}readonly{{/if}}>
				</div>
				{{#unless client_id}}
				<button class="btn btn-info">
					<i class="fa fa-search"></i>
				</button>
				{{/unless}}
			</div>
		</div>
		<div class="col-lg-4 col-md-4 col-xs-8">
			<div class="form-group">
				<label for="invoiceNumber" class="col-sm-4 control-label">Remito</label>
				<div class="col-sm-8">
					<input type="text" class="form-control" name="invoiceNumber" placeholder="e.j: A142985" value="{{invoiceNumber}}" {{#if invoiceNumber}}readonly{{/if}}>
				</div>
			</div>
		</div>
		<div class="col-lg-6 col-md-6" style="display: none;">
			<div class="form-group">
				<label for="client_id" class="col-sm-4 control-label">ID Cliente</label>
				<div class="col-sm-8">
					<input type="text" class="form-control" name="client_id" placeholder="Juan Perez" value="{{client_id}}" {{#if client_id}}readonly{{/if}}>
				</div>
			</div>
		</div>
	</div>
	<hr style="margin-top: 0">
	<div class="row">
		<div class="col-lg-12">
			<div class="row" id="appliance-views"></div>
		</div>
		<div class="col-lg-12">
			<button class="btn btn-success" id="single-appliance">
				<i class="fa fa-plus"></i> Nuevo Equipo
			</button>
			<button class="btn btn-success" id="multiple-appliance">
				<i class="fa fa-table"></i> Carga Masiva
			</button>
			<hr style="margin-bottom: 0;">
		</div>
	</div>
	<div class="form-group" style="margin-top: 10px;">
		{{#unless _id}}
			<div class="col-sm-offset-10 col-sm-2">
				<button type="submit" class="btn btn-dark-blue pull-right">Crear</button>
			</div>
		{{else}}
			<div class="col-sm-offset-10 col-sm-2">
				<button id="update-form" class="btn btn-warning pull-right">Actualizar</button>
			</div>
		{{/unless}}
	</div>
</form>