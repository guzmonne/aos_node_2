<ul id="service-request-tabs" class="nav nav-tabs">
  <li class="active">
  	<a href="#service-request-details-{{timestamp}}" data-toggle="tab">
  		Detalle
  	</a>
  </li>
  <li>
  	<a href="#service-request-edit-{{timestamp}}" data-toggle="tab" id="service-request-edit">
  		Editar Datos
  	</a>
  </li>
</ul>
<div id="client-tab-content" class="tab-content">
  <div class="tab-pane fade in active" id="client-details-{{timestamp}}">
    <div class="row">
      <div class="col-lg-12">
        <h1>
          Cliente: 
           <a href="#render/client/show/{{client_id}}">
            {{client_name}}
          </a>
          <span class="pull-right label {{label}}">{{status}}</span>
        </h1>
        <hr style="margin: 0">
        <div class="row">
          <div class="col-sm-6">
              <h3>Equipos</h3>
          </div>
          {{#if invoiceNumber}}
          <div class="col-sm-6">
            <h3 class="pull-right">
              Remito: 
               <span class="text-primary">{{invoiceNumber}}</span>
             </h3>
          </div>
          {{/if}}
        </div>
        <div id="service-request-appliances"></div>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-sm-6">
        <small>
          Creado el {{createdAt}} por {{createdBy}}
        </small>
      </div>
      <div class="col-sm-6 text-right">
        <small>
          Modificado el {{updatedAt}} por {{updatedBy}}
        </small>
      </div>
    </div>
  </div>
  <div class="tab-pane fade in" id="client-edit-{{timestamp}}">
    <h3>Editar Datos de Cliente</h3>
    <div id="client-form-{{timestamp}}" class="row"></div>
  </div>
</div>